        <Button Content="7"  FontSize="50" FontWeight="Bold"  Background="#FF949EE0"  Foreground="Black" x:Name="btnNum7"  HorizontalAlignment="Left" Margin="100,228,0,0" VerticalAlignment="Top" Width="92" Height="107" BorderThickness="0" Click="btnNum7_Click"/>
        <Button Content="8"  FontSize="50" FontWeight="Bold"  Background="#FF949EE0"  Foreground="Black"  x:Name="btnNum8" HorizontalAlignment="Left" Margin="200,228,0,0" VerticalAlignment="Top" Width="92" Height="107" BorderThickness="0" Click="btnNum8_Click"/>
        <Button Content="9"  FontSize="50" FontWeight="Bold"  Background="#FF949EE0"  Foreground="Black" x:Name="btnNum9"  HorizontalAlignment="Left" Margin="300,228,0,0" VerticalAlignment="Top" Width="92" Height="107" BorderThickness="0" Click="btnNum9_Click"/>

        <Button Content="."  FontSize="50" FontWeight="Bold"    Background="#FF949EE0"  Foreground="Black" x:Name="btnDecimal"  HorizontalAlignment="Left" Margin="100,341,0,0" VerticalAlignment="Top" Width="92" Height="107" BorderThickness="0" ToolTip="Decimal (.)" Click="btnDecimal_Click" />
        <Button Content="0"  FontSize="50" FontWeight="Bold"    Background="#FF949EE0"  Foreground="Black" x:Name="btnNum0"  HorizontalAlignment="Left" Margin="200,341,0,0" VerticalAlignment="Top" Width="92" Height="107" BorderThickness="0" Click="btnNum0_Click"/>
        <Button Content="C"  FontSize="60" FontWeight="Bold"   Background="DimGray"  Foreground="White" x:Name="btnClear"  HorizontalAlignment="Left" Margin="300,341,0,0" VerticalAlignment="Top" Width="92" Height="107" BorderThickness="0" ToolTip="Clear" Click="btnClear_Click"/>

        <Button    FontSize="30"  Background="#FF949EE0"  Foreground="White" x:Name="btnBackSpace"   HorizontalAlignment="Left" Margin="100,295,0,0"  VerticalAlignment="Top" Width="292" Height="75" BorderThickness="0"  ToolTip="BackSpace" Click="btnBackSpace_Click" Visibility="Hidden">
            <StackPanel>
                <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="appbar_clear_reflect_horizontal" Width="76" Height="65" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
