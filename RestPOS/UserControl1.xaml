<UserControl
    x:Class="RestPOS.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RestPOS"   
    mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300">
    <ContentControl.Template>
        <ControlTemplate   >
            <Grid Background="#7f000000">
                <Grid Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Height="122" Margin="29,73,30,105" Width="242">
                    <StackPanel Margin="20">
                        <TextBlock Text="{Binding Title, ElementName=popup}" FontSize="20" />
                        <ContentPresenter />
                    </StackPanel>
                    <Button Content="NO" HorizontalAlignment="Left" Margin="0,96,0,0" VerticalAlignment="Top" Width="121" Height="27"/>
                    <Button Content="YES" HorizontalAlignment="Left" Margin="121,96,0,0" VerticalAlignment="Top" Width="121" Height="27"/>
                </Grid>
            </Grid>
        </ControlTemplate>
    </ContentControl.Template>
</UserControl>
