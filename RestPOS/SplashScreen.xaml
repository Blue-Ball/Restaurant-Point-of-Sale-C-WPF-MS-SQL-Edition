<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="PosCube.SplashScreen"
        Icon="Res/icon.png"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" AllowsTransparency="True" WindowStyle="None"   
        Title="SplashScreen"  >
    <Grid Background="#477080">
        <!--FF7D89D8-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="lblDevelopername" HorizontalAlignment="Center" Margin="0,225,0,0" TextWrapping="Wrap" Text="PosCube" Foreground="White"  FontSize="40" VerticalAlignment="Top" Visibility="Collapsed"/>
            <Image Source="Res/icon.png" Height="200" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <TextBlock x:Name="lblversion" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Retail" Foreground="White" FontSize="25" VerticalAlignment="Top" FontFamily="Calibri Light" Width="61"/>
            <ProgressBar x:Name="progressBar1" HorizontalAlignment="Center" Height="10" VerticalAlignment="Top" Width="200"/>
        </StackPanel>


    </Grid>
</Window>
